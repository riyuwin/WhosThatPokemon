<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_marginTop="-20dp"
                android:layout_height="235dp"
                app:srcCompat="@drawable/nature_wallpaper" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-150dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="About Us"
                android:textColor="#F6F3F3"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subheading_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="120dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="ABOUT WHO'S THAT POKEMON"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="30dp" />

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:lineSpacingExtra="3sp"
                android:text="@string/content_1"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/subheading_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="DEVELOPERS"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="30dp" />

            <TextView
                android:id="@+id/developers"
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:lineSpacingExtra="3sp"
                android:text="@string/content_2"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/subheading_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:text="CONTACT US"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="30dp" />

            <TextView
                android:id="@+id/contact_us"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:lineSpacingExtra="3sp"
                android:text="@string/content_3"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/subheading_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-black"
                android:text="ANY SUGGESTIONS?"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="30dp" />

            <EditText
                android:id="@+id/player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="35dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Input here" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="-50dp"
                android:layout_weight="2"
                android:onClick="launchSubmit"
                android:text="Submit"
                android:textColor="#FFC107"
                app:backgroundTint="#E4000000" />

            <TextView
                android:id="@+id/subheading_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-black"
                android:text=" RATE US"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="30dp" />

            <EditText
                android:id="@+id/editTextNumberSigned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginBottom="33dp"
                android:hint="Rate here"
                android:ems="10"
                android:inputType="numberSigned" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="-80dp"
                android:layout_weight="2"
                android:onClick="Rate"
                android:text="Rate"
                android:textColor="#FFC107"
                app:backgroundTint="#E4000000" />
        </LinearLayout>


    </ScrollView>


</RelativeLayout>